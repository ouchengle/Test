<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_huandeng"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:alpha="0.75"
            android:background="#000000">

            <TextView
                android:id="@+id/tv_huandeng_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="测试文字测试文字测试文字测试文字"
                android:textColor="#ffffff"
                android:textSize="@dimen/huandeng_title_text_size" />

            <ImageView
                android:id="@+id/iv_huandeng_4th_point"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/roundgray" />

            <ImageView
                android:id="@+id/iv_huandeng_4th_point_selected"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@drawable/roundred"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_huandeng_3rd_point"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/iv_huandeng_4th_point"
                android:src="@drawable/roundgray" />

            <ImageView
                android:id="@+id/iv_huandeng_3rd_point_selected"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/iv_huandeng_4th_point"
                android:src="@drawable/roundred"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_huandeng_2nd_point"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/iv_huandeng_3rd_point"
                android:src="@drawable/roundgray" />

            <ImageView
                android:id="@+id/iv_huandeng_2nd_point_selected"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/iv_huandeng_3rd_point"
                android:src="@drawable/roundred"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_huandeng_1st_point"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/iv_huandeng_2nd_point"
                android:src="@drawable/roundgray" />

            <ImageView
                android:id="@+id/iv_huandeng_1st_point_selected"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/iv_huandeng_2nd_point"
                android:src="@drawable/roundred" />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>