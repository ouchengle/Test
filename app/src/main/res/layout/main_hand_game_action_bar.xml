<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hand_game_action_bar_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainActionBar"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/hand_game_action_bar_ib_to_drawer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/ic_drawer_list" />
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/hand_game_hsv_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hand_game_tv1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="推荐"
                    android:textColor="#ffffff"
                    android:alpha="1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/hand_game_tv2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="最新"
                    android:alpha="0.75"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

                <TextView
                    android:id="@+id/hand_game_tv3"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="58dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="排行"
                    android:alpha="0.75"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

                <TextView
                    android:id="@+id/hand_game_tv4"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minWidth="58dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="分类"
                    android:alpha="0.75"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/hand_game_action_bar_ib_search"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_toolbar_search" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>