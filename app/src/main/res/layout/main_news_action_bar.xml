<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/news_action_bar_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainActionBar"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/action_bar_ib_to_drawer"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/ic_drawer_list" />
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/hsv_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="1"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="头条"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="游戏"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="趣味"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="福利"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="手游"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="影视"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="科技"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

                <TextView
                    android:id="@+id/tv8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="动漫"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

                <TextView
                    android:id="@+id/tv9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="点评"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

                <TextView
                    android:id="@+id/tv10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:alpha="0.75"
                    android:gravity="center"
                    android:minWidth="58dp"
                    android:text="产业"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/content_action_bar_text_size" />

            </LinearLayout>

        </HorizontalScrollView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/action_bar_ib_to_more"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/ic_toolbar_add_btn_default" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
